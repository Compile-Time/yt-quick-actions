{
  "manifest_version": 3,
  "name": "yt-quick-actions",
  "version": "1.0.0",
  "description": "Provide quick access to hidden YouTube actions.",
  "icons": {
    "48": "assets/images/extension-icon.svg",
    "96": "assets/images/extension-icon.svg"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "src/background_scripts/url-change-watcher.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/content_scripts/init-extension.ts"
      ],
      "css": [
        "assets/pcss/yt-quick-actions.pcss",
        "assets/fontawesome-chrome/css/fontawesome.min.css",
        "assets/fontawesome-chrome/css/solid.min.css"
      ]
    }
  ],
  "options_ui": {
    "page": "settings_ui/settings.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/fontawesome/webfonts/*"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "use_dynamic_url": true
    }
  ]
}
