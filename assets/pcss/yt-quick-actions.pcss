/*
This CSS file references variables used in the YouTube CSS. This makes the custom buttons added by this
 extension fit the look and feel of YouTube.

YouTube variables start with '--yt-spec'.
*/

.qa-btn {
    color: var(--yt-spec-text-primary);
    border: none;
    background: transparent;
    pointer-events: auto;
}

.qa-btn:hover {
    color: red;
    cursor: pointer;
}

.qa-btn-pill {
    border-radius: 3em;
    background-color: var(--yt-spec-badge-chip-background);
    padding: 0.7em 0.8em;
    margin-left: 0.5em;
}

.qa-btn-pill:hover {
    background-color: var(--yt-spec-button-chip-background-hover);
    color: inherit;
}

.qa-home-watch-later {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-end;
    pointer-events: none;
}

.qa-watching-playlist-remove {
    margin-right: 1em;
}
