{
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "start": "parcel watch --target firefox-dev --host localhost",
    "start-ch": "parcel watch --target chrome-dev --host localhost --dist-dir=dist/dev-ch",
    "start-no-hmr": "parcel watch --target firefox-dev --host localhost --no-hmr",
    "start-no-hmr-ch": "parcel watch --target chrome-dev --host localhost --no-hmr",
    "build": "parcel build --target firefox-prod",
    "build-ch": "parcel build --target chrome-prod",
    "test": "karma run",
    "karma-start": "karma start karma.conf.js"
  },
  "targets": {
    "firefox-dev": {
      "source": "manifest-firefox.json"
    },
    "chrome-dev": {
      "source": "manifest-chrome.json"
    },
    "firefox-prod": {
      "source": "manifest-firefox.json"
    },
    "chrome-prod": {
      "source": "manifest-chrome.json"
    }
  },
  "@parcel/bundler-default": {
    "minBundles": 10000000,
    "minBundleSize": 3000,
    "maxParallelRequests": 20
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "rules": {
      "manifest.*.json": "manifest.json"
    }
  },
  "dependencies": {
    "loglevel": "^1.8.0",
    "loglevel-plugin-prefix": "^0.8.4",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.7.0",
    "@types/jasmine": "^4.3.0",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "daisyui": "^2.33.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "jasmine": "^4.4.0",
    "jasmine-core": "^4.4.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-typescript": "^5.5.3",
    "parcel": "^2.7.0",
    "parcel-namer-rewrite": "^2.0.0-rc.3",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4"
  }
}
