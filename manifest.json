{
  "manifest_version": 2,
  "name": "yt-quick-actions",
  "version": "1.0.0",
  "description": "Provide quick access to hidden YouTube actions.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "*://*.youtube.com/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "src/background_scripts/url-change-watcher.ts"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/content_scripts/init-globals.ts",
        "src/content_scripts/playlist-quick-actions.ts",
        "src/content_scripts/video-quick-actions.ts",
        "src/content_scripts/home-page-quick-actions.ts",
        "src/content_scripts/watching-playlist-quick-actions.ts"
      ],
      "css": [
        "assets/pcss/yt-quick-actions.pcss",
        "assets/fontawesome/css/fontawesome.min.css",
        "assets/fontawesome/css/solid.min.css"
      ]
    }
  ],
  "options_ui": {
    "page": "settings_ui/settings.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
